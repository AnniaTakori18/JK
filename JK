<!-- Opening script tag with the type attribute -->
<script type="text/javascript">

    // Writing text directly to the document
    document.write("JavaScript is fun.");

    // Creating a variable and assigning a value
    var message = "JavaScript is fun!";

    // Writing the variable 5 times using concatenation
    document.write(message + message + message + message + message);

</script>
<!-- Closing script tag -->

</body>
</html>
